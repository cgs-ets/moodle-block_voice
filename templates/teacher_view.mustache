{{!
    @template block_voice/teacher_view

    Template for the block for teachers.
}}
<div class="wrapper teacherview">
    <a href="{{studentcompletionsurl}}" class="progress-link">
        <span class="left-count">{{numcompleted}}</span>
        <div class="progress-wrap">
            <div class="progress">
                <span class="progress-bar complete" style="width: {{percentcompleted}}%" data-toggle="tooltip" title="{{numcompleted}} completed"></span>
                <span class="progress-bar inprogress" style="width: {{percentinprogress}}%" data-toggle="tooltip" title="{{numinprogress}} in progress"></span>
                <span class="progress-bar notstarted" style="width: {{percentnotstarted}}%" data-toggle="tooltip" title="{{numnotstarted}} not started"></span>
            </div>
        </div>
        <span class="right-count">{{numstudents}}</span>
    </a>
</div>