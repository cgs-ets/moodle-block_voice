{{!
    @template block_voice/student_completions

    Template for student completions
}}
<div class="studentcompletions">
    <div class="header">
        <div class="teacher">
            <img src="{{config.teacher.profilephoto}}" class="userpicture" width="100" height="100" alt="Picture of {{config.teacher.fullname}}" title="Picture of {{config.teacher.fullname}}">
            {{config.teacher.fullname}}
        </div>
        <div class="intro">{{{config.intro}}}</div>
    </div>
    <div id="student-list">
        <table class="generaltable">
            <thead>
                <tr>
                    <th class="th-photo"></th>
                    <th class="th-name"><span class="sort" data-sort="col-studentname">Student <i class="fa fa-sort" aria-hidden="true"></i></span></th>
                    <th class="th-status"><span class="sort" data-sort="col-status">Status <i class="fa fa-sort" aria-hidden="true"></i></span></th>
                </tr>
            </thead>
            <tbody class="list">
                {{#students}}
                    <tr class="student">
                        <td class="col-studentphoto">
                            <img src="{{profilephoto}}" class="userpicture" width="100" height="100" alt="Picture of {{fullname}}" title="Picture of {{fullname}}">
                        </td>
                        <td class="col-studentname">
                            {{lastnamefirst}}
                        </td>
                        <td class="col-status">
                            {{#notstarted}}<span class="badge badge-secondary">Not started</span>{{/notstarted}}
                            {{#inprogress}}<span class="badge badge-warning">In progress</span>{{/inprogress}}
                            {{#completed}}<span class="badge badge-success">Completed</span>{{/completed}}
                        </td>
                    </tr>
                {{/students}}
            </tbody>
        </table>
    </div>
    <div class="buttons">
        <a href="{{courseurl}}" class="btn btn-secondary">Return</a>
    </div>
</div>