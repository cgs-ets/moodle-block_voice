{{!
    @template block_voice/survey

    Template for survey
}}
{{#survey}}
<div class="survey format-{{formatname}}">
    <div class="header">
        <div class="teacher">
            <img src="{{teacher.profilephoto}}" class="userpicture" width="100" height="100" alt="Picture of {{teacher.fullname}}" title="Picture of {{teacher.fullname}}">
            {{teacher.fullname}}
        </div>
        <div class="intro">{{{intro}}}</div>
    </div>
    <div class="questions loading">
        {{#questions}}
            <div class="question" data-id="{{id}}" {{#hasreponse}}data-status="saved"{{/hasreponse}}>
                <div class="max-1000">
                    <div class="status" aria-hidden="true">
                        <i class="unsaved fa fa-circle-o" aria-hidden="true" data-toggle="tooltip" title="Response not saved"></i>
                        <i class="saving fa fa-check-circle-o" aria-hidden="true" data-toggle="tooltip" title="Saving" ></i>
                        <i class="saved fa fa-check-circle" aria-hidden="true" data-toggle="tooltip" title="Response saved" ></i>
                    </div>
                    <label class="questiontext">{{{questiontext}}}</label>
                    <ul class="{{formatname}}">
                        {{#answers}}
                            <li>
                                <label {{#selected}}data-status="selected"{{/selected}}>
                                    <input class="answer" type="radio" name="{{formatname}}-{{id}}" value="{{value}}" {{#selected}}checked="checked"{{/selected}}>
                                    <span>{{{name}}}</span>
                                </label>
                            </li>
                        {{/answers}}
                    </ul>
                </div>
            </div>
        {{/questions}}
    </div>
    <div class="buttons">
        <a href="{{courseurl}}" class="btn btn-secondary">Exit</a>
    </div>
</div>
{{/survey}}