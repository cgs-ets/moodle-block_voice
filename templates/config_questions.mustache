{{!
    @template block_voice/config_questions

    Template for the questions config page.
}}
<div class="survey_config">
    <h2>Questions</h2>
    <div class="info">
        <i class="fa  fa-info-circle"></i> {{#str}} sectionnote, block_voice {{/str}} {{#str}} questionnote, block_voice {{/str}}
    </div>

    {{#sections}}
        <div class="section">
            <h3>{{name}}
                <a href="{{deleteurl}}"><i class="fa fa-trash-o"></i></a> 
                <a href="{{editurl}}"><i class="fa fa-cog"></i></a>
            </h3>
            <div>
                {{#questions.0}}
                <table class="table" id="surveytable">
                    <tbody>
                        {{#questions}}
                            <tr>
                                <td class="cell c0">{{name}}{{#mandatory}} <i class="fa fa-lock"></i>{{/mandatory}}</td>
                                <td class="cell c1 lastcol" style="">
                                    <a class="btn btn-primary" style="margin: 0 0 0 5px;" href="{{deleteurl}}"><i class="fa fa-trash-o"></i></a>
                                    <a class="btn btn-primary" style="margin: 0 0 0 5px;" href="{{editurl}}"><i class="fa fa-cog"></i></a>
                                </td>
                            </tr>
                        {{/questions}}
                    </tbody>
                </table>
                {{/questions.0}}
            </div>
            <div>
                <a class="btn btn-primary" style="margin: 0 0 10px 5px;" href="{{addquestionurl}}">
                    <i class="fa fa-plus-circle"></i>&nbsp;Add question
                </a>
            </div>
            <hr>
        </div>
    {{/sections}}
    {{^sections.0}}
        {{#str}} nosections, block_voice {{/str}}
    {{/sections.0}}
    <div>
        <a class="btn btn-primary" style="margin: 0 0 10px 5px;" href="{{addsectionurl}}"><i class="fa fa-plus-circle"></i>&nbsp;Add section</a>
    </div>
</div>