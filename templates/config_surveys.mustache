{{!
    @template block_voice/config_surveys

    Template for the surveys config page.
}}
<div class="survey_config">
    <h2>{{title}}</h2>
    {{#surveys.0}}
        <table class="table" id="surveytable">
            <tbody>
                {{#surveys}}
                    <tr>
                        <td class="cell c0" style="">
                            {{name}} 
                            {{#likert}}<i class="fa fa-ellipsis-h"></i>{{/likert}}
                            {{#thumbs}}<i class="fa fa-thumbs-o-up"></i>{{/thumbs}}
                            {{#visible}}<i class="fa fa-eye"></i>{{/visible}}
                            {{^visible}}<i class="fa fa-eye-slash"></i>{{/visible}}
                        </td>
                        <td class="cell c1 lastcol">
                            <a class="btn btn-primary" style="margin: 0 0 10px 5px;" href="{{questionsurl}}">
                                <i class="fa fa-plus-circle"></i> Questions
                            </a> 
                            <a class="btn btn-primary" style="margin: 0 0 10px 5px;" href="{{deleteurl}}">
                                <i class="fa fa-trash-o"></i> Delete
                            </a> 
                            <a class="btn btn-primary" style="margin: 0 0 10px 5px;" href="{{editurl}}">
                                <i class="fa fa-cog"></i> Configure
                            </a>
                        </td>
                    </tr>
                {{/surveys}}
            </tbody>
        </table>
    {{/surveys.0}}
    {{^surveys.0}}
        {{#str}} nosurveys, block_voice {{/str}}
    {{/surveys.0}}
    <div>
        <a class="btn btn-primary" style="margin: 0 0 10px 5px;" href="{{addsurveyurl}}">
            <i class="fa fa-plus-circle"></i> Add survey
        </a>
    </div>
</div>
